
@model BES.Areas.Procurement.Models.Lot

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>AssignLot PPLot</h5>
            </div>
        </div>
    </div>
</div>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="AssignLot" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="lotno" class="control-label"></label>
                            <select asp-for="lotno" class="form-control" asp-items="ViewBag.LotID"></select>
                            <span asp-validation-for="lotno" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ItemTotal" class="control-label"></label>
                            <input asp-for="ItemTotal" class="form-control" />
                            <span asp-validation-for="ItemTotal" class="text-danger"></span>
                        </div>                        
                        <div class="form-group">
                            <label asp-for="Attachment" class="control-label"></label>
                            <input type="file" name="Attachment" accept="application/pdf" />
                            <span asp-validation-for="Attachment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ActivityID" class="control-label"></label>
                            <select asp-for="ActivityID" class="form-control" asp-items="ViewBag.ActivityID"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContractorID" class="control-label"></label>
                            <select asp-for="ContractorID" class="form-control" asp-items="ViewBag.ContractorID"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
